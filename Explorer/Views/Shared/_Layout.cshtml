<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BD_E2_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BD_E2_MVC.styles.css" asp-append-version="true" />
    <style>
   
        .gradient-background {
            background: linear-gradient(90deg, red, blue, white); 
            padding: 10px;
            width: 60%; 
            display: flex;
            justify-content: flex-start; 
            border-radius: 5px;
        }

     
        .button-container-gradient {
            display: flex;
            gap: 10px; 
            align-items: center; 
        }
        .gradient-button {
            background: none;
            color: white;
            border: none;
            padding: 10px 20px;
            font-weight: bold;
            border-radius: 5px;
            transition: color 0.3s;
        }

        .navbar-brand.gradient-button {
            color: white !important;
        }

        .gradient-button:hover {
            color: black;
        }

        .button-container-center {
            text-align: center;
            margin-top: 20px;
        }

            .button-container-center form {
                display: inline-block;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="gradient-background">
                    <div class="button-container-gradient">
                        <a class="navbar-brand gradient-button">Moi Explorer</a>
                        <a class="nav-link gradient-button" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link gradient-button" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BD_E2_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
